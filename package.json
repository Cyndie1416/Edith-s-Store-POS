{
  "name": "ediths-store-pos",
  "version": "1.0.0",
  "description": "Edith's Store POS System - Complete retail management solution",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start": "node server/index.js",
    "network": "node start-network.js",
    "network-simple": "node start-network-simple.js",
    "https-network": "node start-https-network.js",
    "camera": "node start-camera.js",
    "https": "node start-https.js",
    "https-server": "node server/https-server.js",
    "setup-https": "node setup-https.js"
  },
  "keywords": [
    "pos",
    "retail",
    "inventory",
    "sales",
    "credit-management"
  ],
  "author": "Edith's Store",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-forge": "^1.3.1",
    "qrcode": "^1.5.3",
    "sqlite3": "^5.1.6",
    "twilio": "^5.8.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
